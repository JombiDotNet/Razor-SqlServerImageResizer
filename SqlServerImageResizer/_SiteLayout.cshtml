<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />

  <title>@Page.Title</title>
  <meta name="description" content="@Page.Description" />
  <meta name="author" content="@Page.Author" />

  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css" />

  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css" />

  <link type="text/plain" rel="author" href="~/humans.txt" />
  <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
</head>
<body>
  <header class="navbar navbar-static-top" id="top" role="banner">
    <div class="container">
      <div class="navbar-header">
        <button class="navbar-toggle collapsed" type="button" data-toggle="collapse" data-target="#jdn-navbar" aria-controls="jdn-navbar" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="~/" class="navbar-brand">
          <img alt="Jombi Designs" src="~/img/jd.png" />
        </a>
      </div>
      <nav id="jdn-navbar" class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li>
            <a href="~/samples">Samples</a>
          </li>
          @if (WebSecurity.IsAuthenticated)
          {
            <li>
              <a href="~/upload">Upload Image</a>
            </li>
          }
        </ul>
        <ul class="nav navbar-nav navbar-right">
            @if (WebSecurity.IsAuthenticated)
            {
              <text>
                <li>Welcome <strong>@WebSecurity.CurrentUserName</strong>!</li>
          <li>
            <a href="~/account/logout" title="Logout">Logout</a></li>
        </text>
            }
            else
            {
              <li><a href="~/account/login" title="Login">Login</a></li>
            }
        </ul>
      </nav>
    </div>
  </header>


  @RenderBody()

  @* JavaScript at the bottom for faster page loading *@
  @* Grab jQuery, with a protocol relative URL; fall back to local if offline *@
  @if (Request.Browser.Browser == "IE" && Request.Browser.Version.AsDecimal() < 9)
  {
    <text>
      <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.0.min.js"></script>
    </text>
  }
  else
  {
    <text>
      <script src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-2.1.4.min.js"></script>
      <script>window.jQuery || document.write('<script src="@Href("~/scripts/jquery-2.1.4.min.js")"><\/script>')</script>
    </text>
  }
  <!-- Latest compiled and minified JavaScript -->
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  @RenderSection("scripts", required: false)

</body>
</html>
